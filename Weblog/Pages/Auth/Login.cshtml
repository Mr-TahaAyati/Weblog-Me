 @page
@model Weblog.Pages.Shared.Auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
}
    <div class="form login">
        <div class="form-content">
            <header>Login</header>
            <form method="post">
                <div class="field input-field">
                <input type="text" placeholder="UserName" asp-for="UserName" class="input" />
                <span asp-validation-for="UserName" class="error-message" style="color: red"></span>
                </div>

                <div class="field input-field">
                <input type="password" placeholder="Password" asp-for="Password"class="password">
                <span asp-validation-for="Password" class="error-message" style="color: red"></span>
                    <i class='bx bx-hide eye-icon'></i>
                </div>

                <div class="form-link">
                    <a href="#" class="forgot-pass">Forgot password?</a>
                </div>

                <div class="field button-field">
                    <button>Login</button>
                </div>
            </form>

            <div class="form-link">
                <span>Don't have an account? <a asp-page="Register">Signup</a></span>
            </div>
        </div>
    </div>