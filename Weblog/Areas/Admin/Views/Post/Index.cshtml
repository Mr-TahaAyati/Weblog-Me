@model PostDto
@{
	var conver = 1;
}
<section class="content-header">
	<h1>
		@ViewData["Title"]
	</h1>
	<ol class="breadcrumb">
		<li><a asp-area="Admin" action="Index"><i class="fa fa-dashbord"></i>خانه</a></li>
		<li class="active">@ViewData["Title"]</li>
	</ol>
</section>
<section class="content">
	<a class="btn btn-success" style="margin-bottom: 5px" asp-area="Admin" asp-action="Add"></a>
	<div class="box box-primary">
		<div class="box-body p-0"
		<table class="table table-bordered table-hover">
		<thead>
				<tr>
				<th>#</th>
				<th>عکس</th>
				<th>عنوان</th>
				<th>Slug</th>
				<th>عملیات</th>
			</tr>
	</thead>
		<tbody>
			@foreach (var item in Model.Posts.Where(m => m.ParentId == null))
			{
						<tr>
							<td>@counter</td>
							<td>@item.Title</td>
							<td>@item.Slug</td>
							<td>
								<img src="/img/@item.ImageName" />
							</td>
							<td>
								<a asp-area="admin" asp-controller="Post" asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-info btn-sm">ویرایش</a>
							</td>
						</tr>
						counter += 1;
		    }
		</tbody>
	</table>
		</div>
	</div>
</section>


