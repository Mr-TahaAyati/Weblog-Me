@using CoreLayer.DTOs.Posts
@model IEnumerable<PostDto>
@* مدل باید یک مجموعه از PostDto باشد. *@
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li>
            <a asp-area="Admin" asp-action="Index">
                <i class="fa fa-dashboard"></i> خانه
            </a>
        </li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>

<section class="content">
    <a class="btn btn-success" style="margin-bottom: 5px" asp-area="Admin" asp-controller="Post" asp-action="Add">اضافه کردن</a>
    <a class="btn" style="margin-bottom: 5px; background-color: red; color: white;" asp-area="Admin" asp-controller="Post" asp-action="Delete">حذف</a>
    <div class="box box-primary">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>عنوان</th>
                        <th>Slug</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var index = 1;
                        <!-- شمارنده -->
                        foreach (var post in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>
                                    <img src="/img/@(post.ImageName ?? "default-image.jpg")" alt="@post.Title" width="50" height="50" />
                                </td>
                                <td>@post.Title</td>
                                <td>@post.Slug</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@post.PostId" class="btn btn-info btn-sm">ویرایش</a>
                                    <a asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@post.PostId" class="btn btn-danger btn-sm">حذف</a>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">هیچ پستی یافت نشد.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
