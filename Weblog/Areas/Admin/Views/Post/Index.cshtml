@using CoreLayer.DTOs.Posts
@model IEnumerable<PostDto>
@* مدل باید یک مجموعه از PostDto باشد. *@
@{
    var conver = 1;
}
<section class="content-header">
    <h1>
        @ViewData["Title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-action="Index"><i class="fa fa-dashbord"></i>خانه</a></li>
        <li class="active">@ViewData["Title"]</li>
    </ol>
</section>
<section class="content">
    <a class="btn btn-success" style="margin-bottom: 5px" asp-area="Admin" asp-controller="Post" asp-action="Add">اضافه کردن</a>
    <a class="btn" style="margin-bottom: 5px; background-color: red; color: white;" asp-area="Admin" asp-controller="Post" asp-action="Add">حذف</a>
    <div class="box box-primary">
        <div class="box-body p-0">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>عنوان</th>
                        <th>Slug</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>@conver</td>
                            <td>
                                <img src="/img/@post.ImageName" alt="@post.Title" width="50" height="50" />
                            </td>
                            <td>@post.Title</td>
                            <td>@post.Slug</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@post.PostId" class="btn btn-info btn-sm">ویرایش</a>
                            </td>
                        </tr>
                        conver += 1; <!-- شمارش پست‌ها -->
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
